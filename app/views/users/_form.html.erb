<div class="form-field">
  <%= form_for(user) do |f| %>
    <%= render 'shared/errors', object: f.object %>
    <div>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>
    <div>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
    <div>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>

    <div>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.text_field :password %>
    </div>

    <div>
      <%= f.submit submit_btn, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
